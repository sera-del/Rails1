<div class="main">

<h3>予定の新規追加</h3>

<% if flash[:notice2] %>
 <p class="notice"><%= flash[:notice2] %></p>
<% end %>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
<table>
 <tr>
  <th><%= f.label :title, "タイトル" %></th>
  <td><%= f.text_field :title %></td>
 </tr>

 <tr>
  <th><%= f.label :start_date, "開始日" %></th>
  <td><%= f.date_field :start_date %></td>
 </tr>

 <tr>
  <th><%= f.label :end_date, "終了日" %></th>
  <td><%= f.date_field :end_date %></td>
 </tr>

 <tr>
  <th><%= f.label :is_all_day, "終日" %></th>
  <td><%= f.check_box :is_all_day %>終日の場合はチェックを入れます</td>
 </tr>

 <tr>
  <th><%= f.label :memo, "スケジュールメモ" %></th>
  <td><%= f.text_area :memo, class:"memo-content" %></td>
 </tr>
</table>

<div class="new_show_edit">
  <%= f.submit "保存", class:"blue_botton" %>
  <%= link_to "キャンセル", :posts, class:"blue_botton" %>
</div>
<% end %>

</div>

