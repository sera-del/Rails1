<div class="main">

<h3>予定を編集してください</h3>

<% if flash[:notice3] %>
 <p class="notice"><%= flash[:notice3] %></p>
<% end %>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
    <table>
     <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
     </tr>
    
     <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
     </tr>
    
     <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
     </tr>
    
     <tr>
      <th><%= f.label :is_all_day, "終日" %></th>
      <td><%= f.check_box :is_all_day %>終日の場合はチェックを入れます</td>
     </tr>
    
     <tr>
      <th><%= f.label :memo, "スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class:"memo-content" %></td>
     </tr>
    </table>

    <div class="new_show_edit">
      <%= f.submit "編集を完了する", class:"blue_botton" %>
      <%= link_to "キャンセル", :users, class:"blue_botton" %>
    </div>
<% end %>

</div>